# Configuration EcosystIA Backend
# Copiez ce fichier vers .env et ajustez les valeurs

# Django Configuration
DEBUG=True
SECRET_KEY=django-insecure-ecosystia-2024-development-key
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
DB_NAME=ecosystia
DB_USER=ecosystia_user
DB_PASSWORD=ecosystia_password_2024
DB_HOST=localhost
DB_PORT=5432

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@ecosystia.org

# AI Configuration
GEMINI_API_KEY=your-gemini-api-key-here
OPENAI_API_KEY=your-openai-api-key-here

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Production Configuration (uncomment for production)
# DEBUG=False
# ALLOWED_HOSTS=yourdomain.com
# SENTRY_DSN=your-sentry-dsn-here

# File Upload Configuration
MAX_FILE_SIZE=52428800  # 50MB in bytes

# Security Configuration
SECURE_SSL_REDIRECT=False  # Set to True in production
SECURE_HSTS_SECONDS=0      # Set to 31536000 in production
